# =============================================================================
# Variables de Entorno - PRODUCCION
# Copiar a .env.prod y completar valores
# =============================================================================

# Django
# Generar con: python -c "import secrets; print(secrets.token_urlsafe(50))"
DJANGO_SECRET_KEY=CAMBIAR-GENERAR-CLAVE-SEGURA-50-CHARS
DJANGO_DEBUG=False
DJANGO_LOG_LEVEL=WARNING

# PostgreSQL
DB_NAME=autobiliaria_prod
DB_USER=autobiliaria_prod_user
DB_PASSWORD=CAMBIAR-GENERAR-PASSWORD-SEGURO-32-CHARS
DB_HOST=db-prod
DB_PORT=5432

# CORS - Frontend en produccion
CORS_ALLOWED_ORIGINS=https://autobiliaria.cloud,https://www.autobiliaria.cloud

# Hosts permitidos
ALLOWED_HOSTS=api.autobiliaria.cloud

# CSRF Trusted Origins (requerido Django 4+)
CSRF_TRUSTED_ORIGINS=https://api.autobiliaria.cloud
