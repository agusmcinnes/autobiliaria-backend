# =============================================================================
# Variables de Entorno - DESARROLLO (servidor)
# Copiar a .env.dev y completar valores
# =============================================================================

# Django
DJANGO_SECRET_KEY=dev-secret-key-no-usar-en-produccion
DJANGO_DEBUG=True
DJANGO_LOG_LEVEL=DEBUG

# PostgreSQL
DB_NAME=autobiliaria_dev
DB_USER=autobiliaria_dev_user
DB_PASSWORD=dev-password-123
DB_HOST=db-dev
DB_PORT=5432

# CORS - Desarrollo local + servidor dev
CORS_ALLOWED_ORIGINS=https://api-dev.autobiliaria.cloud,http://localhost:3000,http://127.0.0.1:3000

# Hosts permitidos
ALLOWED_HOSTS=api-dev.autobiliaria.cloud,localhost,127.0.0.1

# CSRF Trusted Origins
CSRF_TRUSTED_ORIGINS=https://api-dev.autobiliaria.cloud,http://localhost:3000

# =============================================================================
# Cloudflare R2 Storage (opcional para desarrollo)
# =============================================================================
USE_R2_STORAGE=False
